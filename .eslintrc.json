{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "ignorePatterns": ["lib/**/*", "node_modules/**/*"],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-mixed-spaces-and-tabs": "warn",
        "no-unused-vars": "warn",
        "no-redeclare": "off"
    },
    "globals": {
        "dojo": "readonly",
        "React": "readonly",
        "Dropbox": "readonly",
        "$": "readonly",
        "jQuery": "readonly",

        "LCstorage": "readonly",
        "LZString": "readonly",

        "$I": "writable",
        "i18nLang": "writable",
        "UIUtils": "writable",

        "config": "readonly",
        "ButtonModernHelper": "readonly",
        
        "com": "readonly",
        "classes": "readonly",
        "mixin": "readonly"
    }
}
